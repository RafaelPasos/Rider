<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="-90" android:startColor="@color/colorAccent" android:endColor="@color/colorAccentDark" ></gradient>
            <corners android:topRightRadius="50dp" android:bottomRightRadius="50dp"></corners>
        </shape>
    </item>
    <item >
        <shape >
            <gradient android:angle="-90" android:startColor="@color/colorPrimary" android:endColor="@color/colorPrimaryDark" ></gradient>
            <corners android:topRightRadius="55dp" android:bottomRightRadius="50dp"></corners>
        </shape>
    </item>
</selector>
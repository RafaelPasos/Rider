<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivUserRequestImageRide"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/marginUIComponent"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivUserRequestImageRide"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/tvUserRequestNameRide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User name"
            android:textAppearance="@android:style/TextAppearance"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_requestPickPointRide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Pick Location"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/tvUserRequestNameRide"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_requestUserMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User mode"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/tvUserRequestNameRide"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/marginUIComponent"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_request_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />
    </RelativeLayout>

    <View
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorSpacerRecyclerElements"
        android:layout_margin="@dimen/marginUIComponent"
        />


</RelativeLayout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.prodevsmx.rider.fragments.FragmentExplore">

    <TextView
        android:id="@+id/tvEventsNearby"
        android:contentDescription="User profile image"
        android:textSize="@dimen/textSizeDescr"
        android:text="Events near"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/marginUIComponent"
        android:layout_marginBottom="@dimen/marginUIComponent"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewEventsNearby"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvEventsNearby"
        >
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>

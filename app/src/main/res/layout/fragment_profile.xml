<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prodevsmx.rider.fragments.FragmentProfile">

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/textSizeTitle"
        android:text="@string/provisionalUserName"
        android:textColor="@color/colorAccent"
        android:layout_margin="@dimen/marginUIComponent"
        />

    <ImageView
        android:id="@+id/ivUserProfilePicture"
        android:contentDescription="User image picture"
        android:layout_margin="@dimen/marginUIComponent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/tvUserName"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>

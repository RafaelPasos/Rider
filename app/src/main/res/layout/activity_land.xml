<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prodevsmx.rider.ActivityLand">


    <EditText
        android:id="@+id/etSearchBar"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/search_bar"
        android:hint="         Search"
        android:textColorHint="@color/colorTextSearchBar"

        />

    <ImageView
        android:id="@+id/ivSearchIC"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="30dp"
        android:src="@mipmap/ic_search"
        />


    <TextView
        android:id="@+id/tvEventsNearby"
        android:textSize="18sp"
        android:text="Events nearby Guadalajara, Jal"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etSearchBar"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewEventsNearby"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvEventsNearby"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

    </android.support.v7.widget.RecyclerView>



</RelativeLayout>

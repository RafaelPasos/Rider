<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivUserRequestImageRide"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/marginUIComponent"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivUserRequestImageRide"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/tv_RequestDriverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User name"
            android:textAppearance="@android:style/TextAppearance"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_requestDriverPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Pick Location"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/tv_RequestDriverName"
            android:textSize="16sp"
            />
        <Button
            android:id="@+id/btnRequestRide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Ride"
            android:textColor="@android:color/black"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"
            android:background="@drawable/button_secondary"
            />

    </RelativeLayout>
    <View
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorSpacerRecyclerElements"
        android:layout_margin="@dimen/marginUIComponent"
        />

</RelativeLayout>
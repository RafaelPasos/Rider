<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.prodevsmx.rider.fragments.FragmentNextRides"
    >

    <TextView
        android:id="@+id/tvNextRides"
        android:textSize="@dimen/textSizeDescr"
        android:text="@string/your_next_rides"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_margin="@dimen/marginUIComponent"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewNextRides"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvNextRides"
        >
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
